<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>AnyHunt Admin Panel</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />
  

<style>
  .user-section {
    background: rgba(255, 255, 255, 0.03);
    padding: 25px 30px;
    margin: 30px auto;
    max-width: 900px;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(229, 9, 20, 0.4);
  }

  .glow-button {
    background: #e50914;
    border: none;
    color: white;
    padding: 10px 20px;
    font-weight: bold;
    border-radius: 6px;
    cursor: pointer;
    box-shadow: 0 0 10px #e50914, 0 0 20px #e50914;
    transition: all 0.3s ease;
  }

  .glow-button:hover {
    background: #b0060f;
    transform: scale(1.05);
    box-shadow: 0 0 15px #e50914, 0 0 30px #e50914;
  }

  .user-list-container {
    display: none;
    animation: fadeIn 0.5s ease-in-out forwards;
    margin-top: 20px;
  }

  .user-list {
    list-style: none;
    padding: 0;
  }

  .user-item {
    background: #1f1f1f;
    padding: 12px 18px;
    margin-bottom: 10px;
    border-radius: 6px;
    box-shadow: 0 0 10px rgba(229, 9, 20, 0.3);
    font-size: 15px;
    color: #eee;
    backdrop-filter: blur(5px);
    animation: slideIn 0.4s ease;
  }

  .online {
    color: lightgreen;
    font-weight: bold;
  }

  .offline {
    color: grey;
    font-style: italic;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: scale(0.95); }
    to { opacity: 1; transform: scale(1); }
  }

  @keyframes slideIn {
    from { transform: translateY(10px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }
</style>

<script>
  function toggleUsers() {
    const userList = document.getElementById('user-list');
    if (userList.style.display === 'none' || userList.style.display === '') {
      userList.style.display = 'block';
      userList.classList.add('fadeIn');
    } else {
      userList.style.display = 'none';
    }
  }
</script>

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #121212;
      color: #eee;
      margin: 0;
      padding: 0;
    }
    header {
      background: #1f1f1f;
      padding: 20px 40px;
      text-align: center;
      font-size: 28px;
      font-weight: 700;
      letter-spacing: 2px;
      color: #e50914;
      box-shadow: 0 2px 8px rgba(0,0,0,0.8);
    }
    section {
      max-width: 900px;
      margin: 30px auto;
      background: #222;
      padding: 25px 30px;
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(229, 9, 20, 0.5);
    }
    h2 {
      margin-bottom: 15px;
      color: #e50914;
      letter-spacing: 1.5px;
    }
    form {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
      align-items: center;
      margin-bottom: 25px;
    }
    input[type="text"], input[type="file"], select {
      flex: 1 1 200px;
      padding: 10px 12px;
      border-radius: 6px;
      border: none;
      font-size: 16px;
    }
    button {
      background: #e50914;
      border: none;
      color: white;
      padding: 12px 25px;
      font-weight: 600;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.3s ease;
    }
    button:hover {
      background: #b0060f;
    }
    .movie-container {
      display: flex;
      gap: 25px;
      flex-wrap: wrap;
      justify-content: center;
    }
    .movie-card {
      background: #333;
      padding: 15px;
      border-radius: 8px;
      width: 220px;
      box-shadow: 0 4px 10px rgba(229, 9, 20, 0.4);
      display: flex;
      flex-direction: column;
      align-items: center;
      transition: transform 0.3s ease;
    }
    .movie-card:hover {
      transform: scale(1.05);
    }
    .movie-card h3 {
      margin: 12px 0 8px;
      font-size: 18px;
      text-align: center;
      color: #fff;
    }
    video {
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.5);
      max-width: 100%;
    }
    .delete-form {
      margin-top: 10px;
      width: 100%;
      text-align: center;
    }
    .delete-form button {
      background: #ff4444;
      padding: 8px 18px;
      font-size: 14px;
      border-radius: 5px;
      width: 100%;
    }
    .delete-form button:hover {
      background: #cc0000;
    }
  </style>
</head>
<body>

<header>AnyHunt Admin Panel</header>

<section>
  <section class="user-section">
  <h2>ðŸ‘¤ Registered Users</h2>
  <button onclick="toggleUsers()" class="glow-button">Show/Hide Users</button>
  <div id="user-list" class="user-list-container">
    <% if (users && users.length > 0) { %>
      <ul class="user-list">
        <% users.forEach(user => { %>
          <li class="user-item">
            <strong><%= user.name %></strong> - <%= user.email %> 
            <% if (user.isLoggedIn) { %>
              <span class="online">(Online)</span>
            <% } else { %>
              <span class="offline">(Offline)</span>
            <% } %>
          </li>
        <% }) %>
      </ul>
      <p>Total Users: <%= users.length %></p>
      <p>Currently Logged In: <%= users.filter(u => u.isLoggedIn).length %></p>
    <% } else { %>
      <p>No registered users found.</p>
    <% } %>
  </div>
</section>
  <h2>Upload New Content</h2>
  <form action="/upload" method="POST" enctype="multipart/form-data">
    <input type="text" name="title" placeholder="Title" required />
    <select name="category" required>
      <option value="movies">Movies</option>
      <option value="tvShows">TV Shows</option>
      <option value="anime">Anime</option>
    </select>
    <input type="file" name="video" accept="video/mp4" required />
    <button type="submit">Upload</button>
  </form>
</section>

<% ['movies', 'tvShows', 'anime'].forEach(category => { %>
  <section>
    <h2><%= category === 'tvShows' ? 'TV Shows' : category.charAt(0).toUpperCase() + category.slice(1) %></h2>
    <div class="movie-container">
      <% content[category].forEach(item => { %>
        <div class="movie-card">
          <h3><%= item.title %></h3>
          <video controls width="200" height="300">
            <source src="<%= item.video %>" type="video/mp4" />
            Your browser does not support the video tag.
          </video>
          <form class="delete-form" action="/admin/delete" method="POST">
            <input type="hidden" name="id" value="<%= item.id %>" />
            <input type="hidden" name="category" value="<%= category %>" />
            <button type="submit">Delete</button>
          </form>
        </div>
      <% }) %>
    </div>
  </section>
<% }) %>

</body>
</html>
